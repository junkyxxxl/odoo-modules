<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Product View -->
        <record id="view_product_product_intracee_isa" model="ir.ui.view">
            <field name="name">view.product.intracee.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@string='Sales']" position="after">     
					<page string="Intracee">
					    <group>
							<field name="combined_nomenclature" />
							<field name="service_codes" />
							<field name="net_mass" />
							<field name="statistical_value" />
							<field name="uom_secondary" on_change="onchange_uom_secondary(uom_id,uom_po_id,uom_secondary)" />
							<field name="uom_secondary_coeff" />
					    </group>
					</page>
                </xpath>
            </field>
        </record>
        
        <record id="intracee_product_template_only_view_form" model="ir.ui.view">
            <field name="name">intracee.product.template.only.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
             <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Accounting']" position="before">
                	<page string="Intracee">
                		<group>
							<field name="tmpl_combined_nomenclature" />
							<field name="tmpl_service_codes" />
							<field name="tmpl_net_mass" />
							<field name="tmpl_statistical_value" />
							<field name="tmpl_uom_secondary" />
							<field name="tmpl_uom_secondary_coeff" />               			
                		</group>
                	</page>																																	
                </xpath>          
             </field>
        </record>        
        
     </data>
</openerp>
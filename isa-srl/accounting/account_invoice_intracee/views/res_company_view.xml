<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Company View -->
        <record id="view_res_company_intracee_isa" model="ir.ui.view">
            <field name="name">view.res.company.intracee.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
<!--
                <xpath expr="//form/sheet/notebook/page[@string='General Information']" position="after">           
					<page string="Intracee">
					    <group>
							<field name="code_ua" />
							<field name="period_purchase_goods" />
							<field name="period_purchase_services" />
							<field name="period_disposals_goods" />
							<field name="period_disposals_services" />
							<field name="province_destination" />
							<field name="vat_delegated_person" />
					    </group>
					</page>
                </xpath>
-->
                <xpath expr="//page[@string='Configuration']" position="inside">
                    <group>
                        <group string="Accounting Intracee">
                            <field name="intracee_journal_id" domain="[('type','=','sale')]" on_change="onchange_intracee_journal_id(intracee_journal_id)" required='1' />
                            <field name="intracee_giro_credit" on_change="onchange_intracee_giro_credit(intracee_giro_credit)" required='1' />
                            <field name="intracee_fiscal_position" required='1' />
                        </group>
                        <group string="Accounting Reverse Charge">
                            <field name="reverse_charge_journal_id" domain="[('type','=','sale')]" on_change="onchange_intracee_journal_id(reverse_charge_journal_id)" required='1' />
                            <field name="reverse_charge_giro_credit" on_change="onchange_intracee_giro_credit(reverse_charge_giro_credit)" required='1' />
                            <field name="reverse_charge_fiscal_position" required='1' />
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
     </data>
</openerp>
                	</group>
                    <group>
                    	<field name="mode"/>
                    	<field name="target_move"/>
                        <field name="date_maturity"/>
                    </group>
                </group>
                <group>
                    <field name="partner_ids"/>
                </group>
                <footer>
                    <button name="print_report_pdf" string="Stampa" type="object" class="oe_highlight" />
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>
        
        <!--action -->        
